CREATE SCHEMA HOSPITAL;

CREATE TABLE PESSOA(
  PESCODIGO INT,
  PESNOME VARCHAR(50),
  PRIMARY KEY(PESCODIGO));
  
CREATE TABLE USUARIO(
  PESCODIGO INT,
  USUNOME VARCHAR(20),
  USUSENHA VARCHAR(10),
  PRIMARY KEY(PESCODIGO),
  FOREIGN KEY(PESCODIGO) REFERENCES PESSOA(PESCODIGO));
  
INSERT INTO PESSOA(PESCODIGO, PESNOME)
VALUES(1, 'Administrador');

INSERT INTO USUARIO(PESCODIGO, USUNOME, USUSENHA)
VALUES(1, 'admin', 'admin');
